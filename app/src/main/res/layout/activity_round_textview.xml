<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true">

    <com.deak.dkuilibrary.layout.DKTextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="求心里阴影面积"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="14sp"
        app:dk_enableTextShadow="true"
        app:dk_textShadowColor="@color/black"
        app:dk_textShadowRadius="3dp"
        app:dk_textShadowY="1dp"
        app:layout_constraintTop_toTopOf="parent" />

    <com.deak.dkuilibrary.layout.DKTextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:text="变色龙无处不在ASDASDAS DASDASD ASDASDASDASD ASDASDDSVDSCVSDVSDVSDVSXCASSCASCASCASCASCASC"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="14sp"
        android:textStyle="bold"
        app:dk_textEndColor="@android:color/holo_purple"
        app:dk_textStartColor="@android:color/holo_blue_bright"
        app:dk_useGradientColor="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text1" />

    <com.deak.dkuilibrary.layout.DKTextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="一只有阴影的变色龙"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="14sp"
        android:textStyle="bold"
        app:dk_enableTextShadow="true"
        app:dk_textEndColor="@android:color/holo_purple"
        app:dk_textShadowColor="@android:color/holo_red_dark"
        app:dk_textShadowRadius="3dp"
        app:dk_textShadowY="1dp"
        app:dk_textStartColor="@android:color/holo_blue_bright"
        app:dk_useGradientColor="true"
        app:layout_constraintTop_toBottomOf="@id/text2" />

    <com.deak.dkuilibrary.layout.DKTextView
        android:id="@+id/text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:maxLines="2"
        android:padding="8dp"
        android:singleLine="false"
        android:text="点击为我换上彩色外衣"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="14sp"
        android:textStyle="bold"
        app:dk_enableTextBorder="true"
        app:dk_textBorderColor="@color/black"
        app:dk_textBorderGradientAngle="140"
        app:dk_textBorderWidth="3"
        app:layout_constraintTop_toBottomOf="@id/text3" />

    <com.deak.dkuilibrary.layout.DKTextView
        android:id="@+id/text5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="让我们一起策马奔腾吧~~~~~~~~~~~~~~~~~"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="14sp"
        android:textStyle="bold"
        app:dk_enableTextShadow="true"
        app:dk_isTranGradient="true"
        app:dk_textEndColor="@android:color/holo_purple"
        app:dk_textShadowColor="@android:color/holo_red_dark"
        app:dk_textShadowRadius="3dp"
        app:dk_textShadowY="1dp"
        app:dk_textStartColor="@android:color/holo_blue_bright"
        app:dk_useGradientColor="true"
        app:layout_constraintTop_toBottomOf="@id/text4" />

    <com.deak.dkuilibrary.layout.DKEditTextView
        android:id="@+id/edit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="input Text"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="16sp"
        app:dk_enableTextBorder="true"
        app:dk_textBorderColor="@color/black"
        app:dk_textBorderWidth="3"
        app:dk_textEndColor="@android:color/holo_purple"
        app:dk_textStartColor="@android:color/holo_blue_bright"
        app:dk_useGradientColor="true"
        app:layout_constraintTop_toBottomOf="@id/text5" />
</androidx.constraintlayout.widget.ConstraintLayout>