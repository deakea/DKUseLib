<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.deak.dkuilibrary.layout.RoundLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:round_bgColor="@android:color/holo_blue_dark"
        app:round_layoutRadius="10dp"
        app:round_strokeColor="@color/black"
        app:round_strokeEnable="true"
        app:round_strokeSize="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="有圆角，有Stoke"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </com.deak.dkuilibrary.layout.RoundLinearLayout>

    <com.deak.dkuilibrary.layout.RoundLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:round_bgColor="@android:color/holo_red_dark"
        app:round_layoutRadius="8dp"
        app:round_strokeColor="@color/black"
        app:round_strokeEnable="false"
        app:round_strokeSize="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:padding="8dp"
            android:text="有圆角，没有stroke"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </com.deak.dkuilibrary.layout.RoundLinearLayout>

    <com.deak.dkuilibrary.layout.RoundLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:round_bgColor="@android:color/holo_green_dark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="常规样式，没有设置任何数据"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </com.deak.dkuilibrary.layout.RoundLinearLayout>
    <com.deak.dkuilibrary.layout.RoundLinearLayout
        android:id="@+id/ll_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:round_layoutBottomLeftRadius="16dp"
        app:round_layoutTopRightRadius="16dp"
        app:round_layoutTopLeftRadius="8dp"
        app:round_layoutBottomRightRadius="12dp"
        app:round_useGradientBg="true"
        app:round_gradientStartBg="@android:color/holo_blue_bright"
        app:round_gradientEndBg="@android:color/holo_purple"
        app:round_bgColor="@android:color/holo_green_dark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义渐变颜色、圆角、渐变stroke等，支持从代码设置"
            android:padding="8dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </com.deak.dkuilibrary.layout.RoundLinearLayout>
</LinearLayout>